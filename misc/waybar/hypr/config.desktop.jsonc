        "critical-threshold": 80,
        // "format-critical": "Ôãâ {temperatureC}¬∞C",
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "{icon}  {temperatureC}¬∞C",
        "format-icons": ["Ôãã", "Ôãâ", "Óº™"],
        "max-length": 7,
        "min-length": 7,
        "on-click": "xsensors"
    },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨",
    },
  },
    "memory": {
        "interval": 30,
        "format": "ÓøÖ  {used:0.2f} / {total:0.0f} GB",
        "on-click": "alacritty -e btop"
    },

    "battery": {
        "interval": 2,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ÔñÉ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "format-ethernet": "{ipaddr}  Û∞àÄ",
    "tooltip-format": "{ifname} via {gwaddr} Û∞àÄ",
    "format-linked": "{ifname} (No IP) Û∞àÄ",
    "format-disconnected": "Disconnected ‚ö†",
